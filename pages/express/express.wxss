.section {
    margin: 0 auto;
    padding: 20rpx;
}

.section .section-item {
    padding: 20rpx;
    font-size: 32rpx;
}

.section .section-item input {
    width: 70%;
}

.section .place-holder {
    color: #000;
}

.section .express-number-label {
    display: flex;
}

.section .express-number-label .express-number-item {
    align-self: flex-start;
    line-height: 1.4rem;
}

.express-list {
    width: 90%;
    margin: 30rpx auto;
    font-size: 28rpx;
    border: 1px solid #ccc;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 5px 5px 2.5px #ccc;
}

.no-data {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no-data image {
    width: 100rpx;
    height: 100rpx;
    margin: 100rpx auto;
    flex: 1;
}